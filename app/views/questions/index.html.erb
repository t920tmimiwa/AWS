<h1>Quizapp</h1>
<h2>問題一覧</h2>
<% @questions.each do |e| %>
  <hr class="hr1">
    <p><strong>問<%= e.id %></strong>
      <%= e.que %>
    </p>

    <p>
      <%= link_to 'クイズに答える', "/questions/#{e.id}/quiz" %>
      <%= link_to '削除', question_path(e), method: :delete %>
    </p>
      <% if e.choice %>
        <%= link_to '結果発表', "/questions/#{e.id}/mark" %>
      <% end %>
<% end %>
<hr class="hr1">

<p> 
<% if session[:uname] %>
  <%= link_to 'クイズ作成', new_question_path %>
<% end %>
</p>

<p>
  <%= link_to 'ユーザー登録', users_path %>
</p>

<% if session[:uname] %>
    <%= link_to 'ログアウト', top_logout_path %>
<% else %>
    <%= link_to 'ログイン', top_main_path %>
<% end %>

</p>

<% if session[:uname] %>
    ログイン中
<% else %>
    ログインしていません
<% end %>